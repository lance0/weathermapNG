# WeathermapNG Docker Environment Configuration
# Copy this to .env and customize for your setup

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_DATABASE=librenms
DB_USERNAME=librenms
DB_PASSWORD=changeme123!
DB_ROOT_PASSWORD=rootchangeme123!

# LibreNMS Configuration
LIBRENMS_DOCKER=true
LIBRENMS_PATH=/opt/librenms
LIBRENMS_RRD_BASE=/opt/librenms/rrd
TZ=UTC

# WeathermapNG Configuration
WEATHERMAP_LOG_STDOUT=true
WEATHERMAP_LOG_LEVEL=info
SKIP_CRON=true

# Ports
WEB_PORT=8000

# Performance
MEMCACHED_ENABLED=true
REDIS_ENABLED=true