# WeathermapNG Environment Configuration
# Copy this file to .env and configure with your values

# Application
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:CHANGE_THIS_TO_A_32_CHARACTER_RANDOM_STRING

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=librenms
DB_USERNAME=librenms
DB_PASSWORD=your_secure_password_here

# LibreNMS Integration
LIBRENMS_PATH=/opt/librenms
LIBRENMS_API_TOKEN=your_librenms_api_token_here
LIBRENMS_RRD_BASE=/opt/librenms/rrd

# Docker Configuration (set to true if running in Docker)
LIBRENMS_DOCKER=false
SKIP_CRON=false
LOG_TO_STDOUT=false

# Logging Configuration
WEATHERMAP_LOG_FORMAT=json
WEATHERMAP_LOG_LEVEL=info
WEATHERMAP_LOG_OUTPUT=/var/log/librenms/weathermapng.log
WEATHERMAP_LOG_STDOUT=false
WEATHERMAP_LOG_ROTATE=true
WEATHERMAP_LOG_MAX_FILES=7
WEATHERMAP_LOG_MAX_SIZE=10M

# Performance Monitoring
WEATHERMAP_LOG_PERFORMANCE=true
WEATHERMAP_ERROR_TRACKING=false
WEATHERMAP_ERROR_SERVICE=sentry
WEATHERMAP_ERROR_DSN=

# Redis Cache (optional)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
SESSION_SECURE_COOKIE=true

# Secret Management Provider (env, vault, aws_secrets, azure_keyvault)
SECRET_PROVIDER=env

# HashiCorp Vault (if using)
VAULT_ADDR=https://vault.example.com
VAULT_TOKEN=
VAULT_PATH=secret/weathermapng

# AWS Secrets Manager (if using)
AWS_REGION=us-east-1
AWS_SECRET_NAME=weathermapng

# Azure Key Vault (if using)
AZURE_KEYVAULT_URL=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=