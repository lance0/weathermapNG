{
  "name": "librenms/weathermapng",
  "description": "Next-generation Weathermap plugin for LibreNMS",
  "type": "librenms-plugin",
  "version": "1.0.0",
  "license": "Unlicense",
  "authors": [
    { "name": "LibreNMS Community", "email": "info@librenms.org" }
  ],
  "require": {
    "php": ">=8.2",
    "ext-gd": "*",
    "ext-json": "*",
    "librenms/plugin-interfaces": "^1.0"
  },
  "suggest": {
    "illuminate/support": "Required by LibreNMS (provided by framework)",
    "illuminate/http": "Required by LibreNMS (provided by framework)",
    "illuminate/database": "Required by LibreNMS (provided by framework)"
  },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "mockery/mockery": "^1.4",
        "fakerphp/faker": "^1.20",
        "squizlabs/php_codesniffer": "^3.6",
        "phpmd/phpmd": "^2.12"
    },
  "autoload": {
    "psr-4": {
      "LibreNMS\\Plugins\\WeathermapNG\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LibreNMS\\Plugins\\WeathermapNG\\Tests\\": "tests/"
    },
    "files": [
      "verify.php"
    ]
  },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:feature": "phpunit --testsuite Feature",
        "test:coverage": "phpunit --coverage-html tests/coverage/html",
        "lint": "phpcs --standard=PSR12 Http/ Models/ Services/ lib/",
        "lint-fix": "phpcbf --standard=PSR12 Http/ Models/ Services/ lib/",
        "analyze": "phpmd Http,Models,Services text codesize,unusedcode,naming",
        "quality": [
            "@lint",
            "@analyze",
            "@test"
        ],
        "validate:install": "bash tests/install-test.sh",
        "verify:plugin": "php verify.php --quiet"
    },
  "config": { "optimize-autoloader": true, "preferred-install": "dist", "sort-packages": true },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "librenms": {
      "plugin-name": "WeathermapNG",
      "version": "1.0.0",
      "description": "Modern interactive network weathermap for LibreNMS",
      "author": "LibreNMS Community",
      "email": "info@librenms.org",
      "homepage": "https://github.com/lance0/weathermapNG"
    },
    "laravel": {
      "providers": [
        "LibreNMS\\Plugins\\WeathermapNG\\WeathermapNGProvider"
      ]
    }
  }
}
