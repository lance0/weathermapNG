{
    "name": "WeathermapNG",
    "version": "1.0.0",
    "description": "Modern interactive network weathermap for LibreNMS",
    "author": "LibreNMS Community",
    "email": "info@librenms.org",
    "homepage": "https://github.com/lance0/weathermapNG",
    "license": "Unlicense",
    "type": "plugin-package",
    "minimum_librenms": "21.0.0",
    "php_minimum": "8.0",
    "keywords": [
        "librenms",
        "plugin",
        "weathermap",
        "network",
        "topology",
        "visualization",
        "monitoring"
    ],
    "hooks": {
        "Menu": {
            "class": "App\\Plugins\\WeathermapNG\\Menu",
            "view": "weathermapng::menu"
        },
        "Page": {
            "class": "App\\Plugins\\WeathermapNG\\Page",
            "view": "weathermapng::page"
        },
        "Settings": {
            "class": "App\\Plugins\\WeathermapNG\\Settings",
            "view": "weathermapng::settings"
        }
    },
    "routes": {
        "file": "routes.php",
        "prefix": "plugins/weathermapng"
    },
    "database": {
        "migrations": "database/migrations",
        "seeders": "database/seeders"
    },
    "views": {
        "namespace": "weathermapng",
        "path": "resources/views/weathermapng"
    },
    "config": {
        "file": "config/weathermapng.php",
        "namespace": "weathermapng"
    },
    "assets": {
        "css": "css",
        "js": "js"
    },
    "requirements": {
        "php_extensions": [
            "gd",
            "json",
            "pdo",
            "mbstring"
        ],
        "composer_packages": {
            "illuminate/support": "^8.0|^9.0|^10.0",
            "illuminate/http": "^8.0|^9.0|^10.0",
            "illuminate/database": "^8.0|^9.0|^10.0"
        }
    },
    "features": {
        "has_settings": true,
        "has_api": true,
        "has_cli": true,
        "has_poller": true,
        "has_migrations": true,
        "supports_docker": true,
        "supports_embedding": true
    },
    "cli": {
        "commands": [
            {
                "name": "weathermapng:poll",
                "script": "bin/map-poller.php",
                "description": "Poll and update weathermap data"
            },
            {
                "name": "weathermapng:verify",
                "script": "verify.php",
                "description": "Verify plugin installation"
            }
        ]
    },
    "poller": {
        "enabled": true,
        "schedule": "*/5 * * * *",
        "command": "php bin/map-poller.php"
    }
}